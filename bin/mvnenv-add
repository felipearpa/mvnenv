#!/bin/bash

if [ -z "$MVNENV_ROOT" ]; then
  echo "mvnenv-add: MVNENV_ROOT is not set" >&2
  exit 1
fi

resolve_link() {
  $(type -p greadlink readlink | head -1) "$1"
}

if [ "${1}" == "--complete" ]; then
  exit
fi

path=${1}
name=${path##*/}

if [ -e "${path}" ]; then
  echo "install $path as $name"
  if [ ! -d "$MVNENV_ROOT/versions" ]; then
    mkdir -p "$MVNENV_ROOT/versions"
  fi
  vername="$MVNENV_ROOT/versions/$name"
  linkpath=$(resolve_link "$vername")
  if [ -z "${linkpath}" ]; then
    echo "do install "
    cd ${path} 2>/dev/null
    MVNPATH=${PWD}
    cd ${OLDPATH} 2>/dev/null
    ln -s "${MVNPATH}" "${vername}"
  else
  	echo "already installed"
  	exit 1
  fi
else
  echo "not exists"
  exit 1
fi
