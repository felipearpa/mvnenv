#!/bin/bash

resolve_link() {
  $(type -p greadlink readlink | head -1) "$1"
}

if [ "${1}" == "--complete" ]; then
  echo --unset
  echo options
  exec mvnenv versions
fi

name=${1##*/}
LOCALVER=.mvn-version

if [ -z "${name}" ]; then
  if [ -e "${LOCALVER}" ]; then
    echo "Current local Maven version:"
    cat ${LOCALVER}
    exit 0
  fi

  echo "No local Maven version is set."
  exit 1
fi

if [ "${name}" = "--unset" ]; then
  if [ -e "${LOCALVER}" ]; then
    rm ${LOCALVER}
    echo "Local Maven version removed."
    exit 0
  fi

  echo "No local Maven version to remove."
  exit 1
fi

vername=${MVNENV_DIR}/versions/$name
linkpath=$(resolve_link "$vername")

if [ -z "${linkpath}" ]; then
  echo "Maven version '${name}' does not exist."
  exit 1
fi

echo ${name} > ${LOCALVER}
exit 0
